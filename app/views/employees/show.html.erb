<h2><%= @employee.name %></h2>
<div class="d-flex justify-content-end gap-4" style="margin: 30px 0 30px 0">
  <%= link_to I18n.t(:back), employees_path, class: 'btn' %>
  <%= link_to I18n.t(:edit), edit_employee_path(@employee), class: 'btn btn-warning' %>
  <%= button_to I18n.t(:delete), @employee, method: :delete, class: 'btn btn-danger' %>
</div>
<%= render @employee %>

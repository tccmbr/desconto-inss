<%- if controller_name != 'sessions' %>
  <%= link_to I18n.t(:login), new_session_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to I18n.t(:signup), new_registration_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to I18n.t(:forgot_your_password), new_password_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to I18n.t(:forgot_your_password_instructions), new_confirmation_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to I18n.t(:unlock_instructions), new_unlock_path(resource_name), class: "link-primary" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "#{I18n.t(:signin_with)} #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
